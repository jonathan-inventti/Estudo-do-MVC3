@model RentCar.Models.Locacao
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/clientvalidation.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Alugar.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Locacao</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Inicio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Inicio)
            @Html.ValidationMessageFor(model => model.Inicio)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Fim)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fim)
            @Html.ValidationMessageFor(model => model.Fim)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Pessoa)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pessoa)
            @Html.ValidationMessageFor(model => model.Pessoa)
        </div>
        <div class="editor-label">
            Marca
        </div>
        <div class="editor-field">
            @Html.DropDownList("idMarca", new SelectList(ViewBag.Marcas, "Id", "Nome"))
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Carro)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Carro, new SelectList(ViewBag.Carros, "Id", "Nome"))
            @Html.ValidationMessageFor(model => model.Carro)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
